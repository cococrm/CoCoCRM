@{
    ViewBag.Title = "CRM";
}
<script src="/Scripts/project.js" type="text/javascript"></script>
<div class="easyui-layout" data-options="fit:true">
    @*顶部*@
    <div data-options="region:'north',border:false" style="height:60px;background:#B3DFDA;">
        
    </div>
    @*功能菜单*@
	<div data-options="region:'west',split:true,title:'功能菜单'" style="width:180px;">
        @Html.Partial("Index/Left");
    </div>
    @*主页面*@
	<div data-options="region:'center'">
        @Html.Partial("Index/Center")
    </div>
    @*页脚*@
	<div data-options="region:'south',border:false" style="height:30px; text-align:center;">
        
    </div>
</div>
