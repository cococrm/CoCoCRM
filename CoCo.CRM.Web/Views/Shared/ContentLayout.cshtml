@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head {
    <script src="/Scripts/utils/jquery.util.easyui.grid.js" type="text/javascript"></script>
    @RenderSection("head", false)
}
<div class="easyui-layout" data-options="fit:true">
    @*工具栏*@
    <div data-options="region:'north',border:false" class="top">
        @RenderSection( "top", false )
    </div>
    @*主页面*@
    <div data-options="region:'center',border:false" style="padding:2px">
        @RenderSection("content")
        @Html.AntiForgeryToken()
    </div>
</div>
